/* page/pages/my/comp/comp.wxss */
.container{
  padding: 20rpx;
}
.slide-image {
  width: 100%;
}

.search-wrapper {
  width: 100%;
  height: 80rpx;
  z-index: 1;
  background-color: #fff;
  padding: 10rpx 0px;
  display: flex;
  flex-direction: row;
}

.search-input-wrapper {
  flex: 8;
  margin-left: 10rpx;
  padding: 5px;
  background-color: #eee;
  border-radius: 5px;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.search-button-wrapper {
  padding-left: 5px;
  padding-right: 5px;
  padding-top: 2px;
}

.search-button {
  flex: 1;
  border: none !important;
  color: white !important;
  width: 32px;
  height: 32px;
}

.infos-box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.txt{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.txt-des{
  margin-top: 10rpx;
}

.img{
  border: 1px solid green;
  width: 200rpx;
  height: 120rpx;
}