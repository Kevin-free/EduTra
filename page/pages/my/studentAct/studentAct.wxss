/* page/pages/my/studentAct/studentAct.wxss */

.container {
  padding: 20rpx;
  height: 100%;
}

.tabTit {
  height: 90rpx;
  line-height: 90rpx;
  width: 750rpx;
  position: fixed;
  top: 0rpx;
  z-index: 1;
  background: #fff;
  font-size: 32rpx;
  text-align: center;
}

.tabTit .active {
  color: #e64340;
  background: #fff;
}

.tabTit .active image {
  transform: rotate(180deg);
  background: none;
}

.tabTit image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}

.tabLayer {
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.15);
  width: 750rpx;
  overflow: hidden;
  position: fixed;
  top: 100rpx;
  z-index: 1;
  background: #fff;
  padding-bottom: 40rpx;
  border-bottom: solid 1px #eee;
  text-align: center;
}

.tabLayer text {
  width: 210rpx;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  border: solid 1px #eee;
  margin: 20rpx 0 0 26rpx;
  font-size: 15px;
}

.tabLayer .active {
  color: #e64340;
  border-color: #e64340;
}

.flex1 {
  flex: 1;
  overflow: hidden;
  display: block;
}

/*弹性盒模型*/

.box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.scr {
  height: 100%;
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
}

.img {
  width: 280rpx;
  height: 280rpx;
  border: 1px solid grey;
  border-radius: 30rpx;
}

.weui-grid {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px;
  width: 50%;
  box-sizing: border-box;
}
