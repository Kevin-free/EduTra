/* pages/getTelVerifycode2/getTelVerifycode2.wxss */
.pass-login-view {
    font-size: 14px;
    color: #5D5D5D;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    padding: 30rpx 40rpx 0 40rpx;
}

.tel-view {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 30rpx 40rpx;
    margin-top: 30rpx;
    color: #5D5D5D;
    font-size: 16px;
}

.tel-view .tel-line-view {
    display: flex;
    align-items: center;
    border-bottom: solid 1px #D8D8D8;
    padding: 25rpx 0;
}

.tel-line-view .select-country-btn {
    border-right: solid 1px #C6C6C6;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-right: 20rpx;
}

.tel-view text {
    color: #41403E;
}

.tel-view input {
    padding: 0 20rpx;
}

.getident-view {
    display: flex;
    flex-direction: column;
    margin-top: 10rpx;
    padding: 30rpx 40rpx;
    color: #5D5D5D;
    font-size: 16px;
}

.getident-view .identify-input {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx 0;
    border-bottom: solid 1px #D8D8D8;
}

.getident-view .getIdentify {
    text-align: center;
    border-radius: 20rpx;
    color: #FFC200;
    font-size: 14px;
    border: solid 1px #FFC200;
    padding: 8rpx 20rpx;
}

.getident-view .noGetIdentify {
    text-align: center;
    border-radius: 20rpx;
    color: #C6C6C6;
    font-size: 14px;
    border: solid 1px #C6C6C6;
    padding: 8rpx 20rpx;
}

.login-view {
    background-color: #FFC14B;
    border-radius: 40rpx;
    color: #525151;
    display: flex;
    justify-content: center;
    align-items: center;
    width: calc(100% - 80rpx);
    margin-left: 40rpx;
    margin-top: 50rpx;
    padding: 20rpx 0;
    font-size: 16px;
}

.tip-view {
    padding: 30rpx 40rpx;
    font-size: 14px;
    color: #838383;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.bottom-view {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 180rpx;
    background-image: url("https://resource.bcgame-face2face.haorenao.cn/login_bgImg.png");
    background-size: 100% 100%;
    background-position: center;
    background-repeat: no-repeat;
}

.country-tel-view {
    position: fixed;
    top: 0;
    left: 0;
    width: calc(100% - 80rpx);
    bottom: 0;
    padding: 10rpx 40rpx;
    background-color: #fff;
    z-index: 10001;
}

.country-tel-view .top-view {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.country-tel-view .country-list {
    margin-top: 30rpx;
    width: 100%;
    height: 90%;
}

.country-tel-view .country-list .country-item {
    margin-top: 20rpx;
    padding: 20rpx 0;
    font-size: 16px;
}