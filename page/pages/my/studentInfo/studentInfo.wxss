/* pages/my/enroll/enroll.wxss */

.container {
  padding: 20rpx;
  height: 100%;
}

.search-wrapper {
  position: fixed; /*悬停搜索框的关键样式*/
  top: 0px;
  left: 0;
  width: 100%;
  height: 80rpx;
  z-index: 1;
  background-color: #fff;
  padding: 10rpx 0px;
  display: flex;
  flex-direction: row;
}

.search-input-wrapper {
  flex: 8;
  margin-left: 10rpx;
  padding: 5px;
  background-color: #eee;
  border-radius: 5px;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.search-button-wrapper {
  padding-left: 5px;
  padding-right: 5px;
  padding-top: 2px;
}

.search-button {
  flex: 1;
  border: none !important;
  color: white !important;
  width: 32px;
  height: 32px;
}

.scr {
  height: 100%;
  margin-top: 190rpx;
}

.tabTit {
  height: 90rpx;
  line-height: 90rpx;
  width: 750rpx;
  position: fixed;
  top: 100rpx;
  z-index: 1;
  background: #fff;
  font-size: 32rpx;
  text-align: center;
}

.tabTit .active {
  color: #e64340;
  background: #fff;
}

.tabTit .active image {
  transform: rotate(180deg);
  background: none;
}

.tabTit image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}

.tabLayer {
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.15);
  width: 750rpx;
  overflow: hidden;
  position: fixed;
  top: 180rpx;
  z-index: 1;
  background: #fff;
  padding-bottom: 40rpx;
  border-bottom: solid 1px #eee;
  text-align: center;
}

.tabLayer text {
  width: 210rpx;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  border: solid 1px #eee;
  margin: 20rpx 0 0 26rpx;
  font-size: 15px;
}

.tabLayer .active {
  color: #e64340;
  border-color: #e64340;
}

.flex1 {
  flex: 1;
  overflow: hidden;
  display: block;
}

/*弹性盒模型*/
.box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.top-column {
  line-height: 1;
  display: flex;
  background: rgba(255, 196, 0, 0.623);
}

.bc_green {
  display: flex;
  border-bottom: 2rpx solid #eee;
  align-items: center;
  height: 40px;
  padding: 10rpx;
}

.nameBoard-text {
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
  padding-right: 30rpx;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  white-space: nowrap; /*强制不换行*/
}

.input {
  border: 1px solid #9b9b9b;
  border-radius: 10rpx;
  height: 70rpx;
  margin-bottom: 20rpx;
}

movable-area {
  position: fixed; /*悬停搜索框的关键样式*/
  top: 0rpx;
  left: 0;
  z-index: 9;
  height: 100%;
  width: 100%;
}

movable-view {
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
  height: 100rpx;
  width: 100rpx;
  color: #fff;
}

.add_icon {
  /* box-shadow: 0 5px 5px rgba(0, 0, 0, 0.15); */
  position: fixed; /*悬停的关键样式*/
  width: 100rpx;
  height: 100rpx;
}

.avatar{
  border-radius: 50%;
  border: 1px solid rgba(204, 204, 204, 0.5);
  width: 60rpx;
  height: 60rpx;
}
