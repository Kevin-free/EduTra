/**index.wxss**/

.container {
  padding: 20rpx;
  padding-top: 0;
}

.banner-swiper {
  width: 100%;
  height: 370rpx;
}

.banner-swiper .slide-image {
  width: 100%;
  height: 100%;
}

.head {
  height: 100%;
  margin-top: 10rpx;
}

.ad-box {
  padding: 20rpx;
  margin-top: 10rpx;
  height: 100%;
  display: flex;
}

.left{
  padding-right: 5rpx;
  width: 50%;
  height: 350rpx;
  display: flex;
  flex-direction: column;
}

.up{
  width: 100%;
  height: 200rpx;
  padding-bottom: 5rpx;
}

.down{
  width: 100%;
  height: 200rpx;
  padding-top: 5rpx;
}

.right{
  display: flex;
  padding-left: 5rpx;
  width: 50%;
  height: 100%;
}

.big{
  width: 100%;
  height: 350rpx;
}

.body {
  margin-top: 10rpx;
  height: 100%;
}

.body-block {
  border: solid 1rpx #a0a0a0;
  border-radius: 12rpx;
  height: 400rpx;
  margin-top: 10rpx;
}

.img {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  width: 100%;
  height: 60%;
}

.weui-grid {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  padding: 10rpx;
  box-sizing: border-box;
}

.weui-grid image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
}

.weui-grid text {
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  font-size: 24rpx;
  text-align: center;
}
