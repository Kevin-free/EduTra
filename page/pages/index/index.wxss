/**index.wxss**/

.container {
  padding: 20rpx;
  padding-top: 0;
}

.banner-swiper {
  width: 100%;
  height: 370rpx;
}

.banner-swiper .slide-image {
  width: 100%;
  height: 100%;
}

.head {
  height: 100%;
  margin-top: 10rpx;
}

.weui-grid {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  padding: 10rpx;
  box-sizing: border-box;
}

.weui-grid image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
}

.weui-grid text {
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  font-size: 24rpx;
  text-align: center;
}

.hotPro-top {
  width: 100%;
  height: 80rpx;
  font-size: 18rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hotPro-top .line {
  width: 5%;
  position: relative;
  top: 0;
  border-bottom: 3rpx solid #f94591;
  margin-right: 15rpx;
}

.rec-store-top .line {
  width: 5%;
  position: relative;
  top: 0rpx;
  border-bottom: 3rpx solid #f94591;
  margin-right: 15rpx;
}

.hotPro-txt {
  font-size: 30rpx;
  padding: 0 30rpx;
  background-image: -webkit-gradient(linear, 0 0, 0 bottom, from(rgba(242, 195, 104, 1)), to(rgba(254, 78, 194, 1)));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.ad-box {
  height: 100%;
  display: flex;
}

.left {
  padding-left: 20rpx;
  padding-right: 5rpx;
  width: 50%;
  height: 350rpx;
  display: flex;
  flex-direction: column;
}

.up {
  width: 100%;
  height: 200rpx;
  padding-bottom: 5rpx;
}

.down {
  width: 100%;
  height: 200rpx;
  padding-top: 5rpx;
}

.right {
  display: flex;
  padding-left: 5rpx;
  padding-right: 20rpx;
  width: 50%;
  height: 100%;
}

.big {
  width: 100%;
  height: 350rpx;
}

.rec-pros-frame {
  width: 100%;
}

.rec-pros-top {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.rec-pros-top .line {
  width: 5%;
  position: relative;
  top: 0;
  border-bottom: 3rpx solid #fe52e8;
}

.rec-pros-top .iconfont {
  color: #fb7676;
  padding-left: 30rpx;
}

.rec-pros-txt {
  padding-left: 10rpx;
  font-size: 30rpx;
  padding-right: 30rpx;
  background-image: -webkit-gradient(linear, 0 0, 0 bottom, from(rgba(242, 195, 104, 1)), to(rgba(254, 78, 194, 1)));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.class-title {
  width: 100%;
  height: 60rpx;
  margin-bottom: 4rpx;
  font-size: 28rpx;
  padding-left: 10rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.class-title .class-txt {
  display: flex;
  align-items: center;
}

.class-title .class-txt .class-redbox {
  width: 8rpx;
  height: 30rpx;
  background-color: #f02929;
}

.class-txt text {
  background-image: -webkit-gradient(linear, 0 0, 0 bottom, from(rgba(231, 163, 61, 1)), to(rgba(252, 62, 219, 1)));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.class-title .class-txt text {
  margin-left: 12rpx;
}

.class-title .class-more {
  display: flex;
  height: 30rpx;
  font-size: 24rpx;
  color: #9b9b9b;
  align-items: center;
}
.icon-arrow-right {
  float: right;
}

.body {
  margin-top: 10rpx;
  height: 100%;
}

.body-block {
  border: solid 1rpx #a0a0a0;
  border-radius: 12rpx;
  height: 400rpx;
  margin-top: 10rpx;
}

.img {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  width: 100%;
  height: 60%;
}
